      <script>
        const registration = document.getElementById('registration');
        const payLink = document.getElementById('payLink');
        const backBtn = document.getElementById('backBtn');

        payLink.addEventListener('click', e => {
          e.preventDefault();

          // Flip the card
          registration.classList.add('flip');

          // Scroll after the flip animation (800ms in your CSS)
          setTimeout(() => {
            registration.scrollIntoView({ behavior: 'smooth' });
          }, 1000);
        });

        backBtn.addEventListener('click', e => {
          e.preventDefault();
          registration.classList.remove('flip');

          // Optional: scroll to top of form after flip back
          setTimeout(() => {
            registration.scrollIntoView({ behavior: 'smooth' });
          }, 1000);
        });
      </script>


